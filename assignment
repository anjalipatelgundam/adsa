class PatientNode:
    def __init__(self, patient_name, patient_age, patient_id):
        self.patient_name = patient_name
        self.patient_age = patient_age
        self.patient_id = patient_id
        self.next_node = None


class RoundRobinPatientList:
    def __init__(self):
        self.start_node = None

    def add_patient(self, patient_name, patient_age, patient_id):
        new_patient = PatientNode(patient_name, patient_age, patient_id)

        if self.start_node is None:
            self.start_node = new_patient
            new_patient.next_node = self.start_node
            print(f"âœ… Patient {patient_name} added as the first patient.")
        else:
            current_node = self.start_node
            while current_node.next_node != self.start_node:
                current_node = current_node.next_node
            current_node.next_node = new_patient
            new_patient.next_node = self.start_node
            print(f"âœ… Patient {patient_name} added to the list.")

    def remove_patient(self, patient_id):
        if self.start_node is None:
            print("âš ï¸ No patients to delete.")
            return

        current_node = self.start_node
        previous_node = None

        # Case 1: Only one patient in the list
        if current_node.next_node == self.start_node and current_node.patient_id == patient_id:
            self.start_node = None
            print(f"ğŸ—‘ï¸ Patient with ID {patient_id} deleted (was the only patient).")
            return

        while True:
            if current_node.patient_id == patient_id:
                # Case 2: Deleting the head
                if previous_node is None:
                    temp_node = self.start_node
                    while temp_node.next_node != self.start_node:
                        temp_node = temp_node.next_node
                    temp_node.next_node = self.start_node.next_node
                    self.start_node = self.start_node.next_node
                else:
                    # Case 3: Deleting in between or at end
                    previous_node.next_node = current_node.next_node

                print(f"ğŸ—‘ï¸ Patient with ID {patient_id} deleted successfully.")
                return

            previous_node = current_node
            current_node = current_node.next_node

            if current_node == self.start_node:
                break

        print(f"âŒ Patient with ID {patient_id} not found.")

    def show_patients(self):
        if self.start_node is None:
            print("âš ï¸ No patients in the list.")
            return

        print("\nğŸ‘©â€âš•ï¸ Current Round-Robin Patient List:")
        current_node = self.start_node
        while True:
            print(f"Name: {current_node.patient_name}, Age: {current_node.patient_age}, ID: {current_node.patient_id}")
            current_node = current_node.next_node
            if current_node == self.start_node:
                break


# Example usage
if __name__ == "__main__":
    rr_patients = RoundRobinPatientList()
    rr_patients.add_patient("Jinnie", 30, 101)
    rr_patients.add_patient("Alekya", 25, 102)
    rr_patients.add_patient("Bobbie", 40, 103)

    rr_patients.show_patients()

    rr_patients.remove_patient(102)
    rr_patients.show_patients()
